

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id          String      @id @unique
  username    String      @unique
  displayName String
  email       String?     
  image       String?
  deployments Deployments[]
}

model Deployments{
  id          Int         @id @default(autoincrement())
  gitUrl      String      @unique
  status      Boolean
  userId      String      
  user        User        @relation(fields: [userId], references: [id])
}